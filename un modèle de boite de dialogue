<!-- HTML boite de dialogue du message de suppression-->
    
            <div id="supprimer" class="supprimer">
                <div class="supprimer-content">
                    <h2 id="h2">Êtes-vous sur de vouloir supprimer cette randonnée ?</h2>
                    <div class="confirmation">
                        <button id="ok" onclick="deleteItem()">Confirmer</button>
                        <button id="annuler" onclick="closeDeletePopup()">Annuler</button>
                    </div>
                </div>
            </div>
            
<!-- CSS boite de dialogue du message de suppression-->
    
.supprimer {
    display: none; /* pour le cacher */
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5); /* pour griser le background quand le pop up va apparaitre */
    z-index: 9999; /* pour le mettre en haut niveau */
}
.supprimer-content{   /* a.k.a le pop-up en lui meme */
