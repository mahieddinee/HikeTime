    height: 30vh;
    margin: 20% auto; /* Centrer le pop-up */
    border-radius: 2vh;
    box-shadow: 0 0 1vh rgba(0,0,0,0.5); /* pour l’effet shadow */
    position: relative;
    display: flex;
    flex-direction: column;
